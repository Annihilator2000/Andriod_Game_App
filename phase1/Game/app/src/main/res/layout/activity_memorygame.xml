<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memorygame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/game_backg"
    tools:context="com.example.game.Main2Activity">

    <include
        android:id="@+id/include"
        layout="@layout/memory_images"
        android:layout_width="385dp"
        android:layout_height="630dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.636" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="67dp"
        android:text="Moves Left: 15"
        android:textColor="#FB8C00"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!--Used https://www.youtube.com/watch?v=gkh-5pmYEa0 and
    https://developer.android.com/guide/topics/ui/layout/constraint to learn-->
</androidx.constraintlayout.widget.ConstraintLayout>